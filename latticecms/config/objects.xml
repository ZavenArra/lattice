		<objectType name="tagsObjectType" >
      <elements>
				<tags label="Tags"/>
      </elements>
		</objectType>


		<objectType name="wildflowerTestObject" >
      <elements>
				<image field="image" label="Image of the Wildflower"/>
      </elements>
		</objectType>

