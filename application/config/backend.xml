		<template templatename="stuff" nodetype="CATEGORY" allow_sort="true" allow_delete="true" allow_publish="true" >
			<module type="ipe" field="blurb" label="Blurb" tag="p" rows="4" />
			<addableobject templateId="stuffItem" templateAddText="Add a Stuff" />
