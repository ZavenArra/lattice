<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration SYSTEM "../../modules/mop/config/backend.dtd">

<configuration>

	<templates>

<!-- HOME -->
		<template name="basicCategory" nodeType="CATEGORY" allowChildSort="false" allowDelete="false" allowTogglePublish="false">

		</template>

		<template name="singleIPE" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<ipe field="singleIPE" label="single IPE" rows="1"/>
			</elements>
		</template>

		<template name="singleRadioGroup" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
        <radioGroup field="singleRadioGroup" groupLabel="Single Radio Group">
          <radio label="One" value="1"/>
          <radio label="Two" value="2"/>
          <radio label="Three" value="3"/>
        </radioGroup>
			</elements>
		</template>

		<template name="singleCheckbox" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<checkbox field="Single Checkbox" label="Single Checkbox"/>
			</elements>
		</template>

		<template name="singleDate" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<date field="singleDate" label="Single Date"/>
			</elements>
		</template>

		<template name="singleTime" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<time field="singleTime" label="Single Time"/>
			</elements>
		</template>

		<template name="simpleListModulePage" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<ipe field="title" label="Title" rows="1"/>
				<ipe field="description" label="Description"/>
				<list family="simplelistmodule" label="Simple List Module" display="inline">
					<addableObject templateName="simpleListItem"  addText="Add a field"/>
				</list>
			</elements>
		</template>

		<template name="imagelistmodule" nodeType="LEAF" alow_sort="true" alow_delete="true" alow_publish="false">
			<elements>
				<ipe field="title" label="Title" rows="1"/>
				<ipe field="description" label="Description"/>		
				<singleimage field="file" extentions="jpg"/>
				<list family="imageListmodule" label="Image List" dislplay="inline">
					<addableObject templateName="imageList" addText="Add an image"/>
				</list>
			</elements>	
		</template>
		
		<template name="filelistmodulepage" nodeType="LEAF" allowChildSort="true" alow_delete="true" allowTogglePublish="false">
			<elements>
				<ipe field="title" label="Title" rows="1"/>
				<ipe field="description" label="Description"/>
				<file field="file" label="File" extentions="txt,pdf,html,csv"/>
				<list family="fileListModule" label="File List" display="inline">
 					<addableObject templateName="fileList" addText="Add a field"/>
				</list>
			</elements>
		</template>
	
		<template name="complexlistmodulepage" type="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
			
			</elements>
		</template>
		
	</templates>

	<data></data>

</configuration>

