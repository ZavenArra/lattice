<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration SYSTEM "../../modules/mop/config/backend.dtd">
<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<templates>  
		<template name="stuff" nodeType="CATEGORY" allow_sort="true" allow_delete="true" allow_publish="true" >
      <elements>
        <ipe field="blurb" label="Blurb" tag="p" rows="4" />
      </elements>
			<addableobject templateName="stuffItem" addText="Add a Stuff" />
			<component templateName="differentItem">
				<title>A title!</title>
			</component>
		</template>
		<template name="stuffItem" nodeType="LEAF" allow_sort="true">
      <elements>
        <ipe field="text" label="Text" tag="p" rows="4" />
        <ipe field="more" label="MORE" tag="p" rows="4" />
      </elements>
			<list family="listOfThings" label="Blurb" display="inline" >
				<addableobject templateName="differentItem" addText="Add a Different Item" />
			</list>
		</template>
		<template name="home" nodeType="LEAF"/>
		<template name="differentItem" nodeType="LEAF">
      <elements>
        <ipe field="blurb3" label="WJAT" tag="p" rows="4" />
      </elements>
		</template>
	</templates>
	<data>
		<item templateName="stuff">
			<content>
				<title>Stuff</title>
			</content>
		</item>
		<item templateName="home">
			<content>
				<title>Home</title>
			</content>
		</item>
	</data>
</configuration>

