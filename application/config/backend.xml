				<addableobject templateId="differentItem" templateAddText="Add a Different Item" />
			</module>
		</template>
		<template templatename="home" nodetype="LEAF"/>
		<template templatename="differentItem" notetype="LEAF">
			<module type="ipe" field="blurb3" label="WJAT" tag="p" rows="4" />
		</template>
	</templates>
	<data>
		<item templatename="stuff">
			<content>
				<title>Stuff</title>
			</content>
		</item>
		<item templatename="home">
			<content>
				<title>Home</title>
			</content>
		</item>
	</data>
</configuration>

