<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration SYSTEM "../../modules/mopmvc/config/backend.dtd">

<configuration>

	<templates>

<!-- HOME -->
		<template name="basicCategory" nodeType="CATEGORY" allowChildSort="false" allowDelete="false" allowTogglePublish="false">
			<addableObject templateName="article" addText="Add an Article" />
			<addableObject templateName="basicCategory" addText="Add a Category" />
		</template>

		<template name="basicCategory" nodeType="CATEGORY">
		</template>
		
		<template name="article" nodeType="LEAF">
		</template>

		<template name="singleIPE" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">

			<elements>
				<ipe field="singleIPE" label="single IPE" rows="1"/>
			</elements>
			
			<components>
				<component templateName="singleDate" label="SingleDate as Component" />
			</components>
		
		</template>

		<template name="multilineIPE" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<ipe field="multilineIPE" label="MultiLine IPE" rows="10"/>
			</elements>
		</template>
		
		<template name="singleRadioGroup" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
        <radioGroup field="singleRadioGroup" groupLabel="Single Radio Group">
          <radio label="One" value="1"/>
          <radio label="Two" value="2"/>
          <radio label="Three" value="3"/>
        </radioGroup>
			</elements>
		</template>

		<template name="singleCheckbox" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<checkbox field="singleCheckbox" label="Single Checkbox"/>
			</elements>
		</template>

		<template name="singleDate" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<date field="singleDate" label="Single Date"/>
			</elements>
		</template>

		<template name="singleTime" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<time field="singleTime" label="Single Time"/>
			</elements>
		</template>

		<template name="simpleListModule" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<list family="simplelist" label="Simple List Module" display="inline">
					<addableObject templateName="simpleListModuleItem"  addText="Add a field"/>
				</list>
			</elements>
		</template>

		<template name="simpleListModuleItem" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<ipe field="title" label="Title" rows="1"/>
                                <ipe field="description" label="Description"/>
			</elements>
		</template>
			
		<template name="imageListModule" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<list family="imageListItem" label="Image List" display="inline">
					<addableObject templateName="imageListItem" addText="Add an image"/>
				</list>
			</elements>	
		</template>
		
		<template name="imageListItem" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<ipe field="title" label="Title" rows="1"/>
				<ipe field="description" label="Description"/>		
				<singleImage field="file">
					<ext>jpg</ext>
				</singleImage>
			</elements>
		</template>
		
		<template name="fileListModule" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<list family="fileList" label="File List" display="inline">
                                        <addableObject templateName="fileListItem" addText="Add a field"/>
                                </list>
                        </elements>
		</template>

		<template name="fileListItem" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>
				<ipe field="title" label="Title" rows="1"/>
                                <ipe field="description" label="Description"/>
                                <singleFile field="file" label="File">
                                        <ext>html</ext>
                                        <ext>csv</ext>
                                        <ext>txt</ext>
                                        <ext>pdf</ext>
                                </singleFile>
			</elements>
		</template>
	
		<template name="complexlistmodulepage" nodeType="LEAF" allowChildSort="true" allowDelete="true" allowTogglePublish="false">
			<elements>

			</elements>
		</template>
		
	</templates>

	<data></data>

</configuration>

