<?xml version="1.0" encoding="utf-8"?>
<!-- defaults

	template
		allowDelete true
		allowPublish true
		allowChildSort true
	

	
	
-->


<configuration>

	<templates>

<!-- HOME -->

		<template name="home" nodeType="leaf" allowDelete="false" allowPublish="false">
			<elements>
				<ipe field="featureBlurb" label="Feature Text" tag="p" rows="4" />
				<singleImage field="featureImage" label="Feature Image">
          <ext>jpg</ext>
        </singleImage>
				<list family="featureList" label="Feature Links" display="inline" >
					<addableObject templateName="featureListItem" addText="Add a Link" />
				</list>
				<ipe field="aboutHeader" label="About Header" tag="p" rows="1" />		
				<ipe field="aboutBlurb" label="About Soberscove" tag="p" rows="6" />
				<list family="annoucements" label="Annoucement List" display="component" >
					<addableObject templateName="featureListItem" addText="Add a Link" />
				</list>
			</elements>
		</template>

		<template name="announcements" nodeType="category" allowSort="true" allowDelete="false" allowPublish="false">
			<addableObject templateName="annoucement" addText="Add an annoucement" />
		</template>
		
		<template name="annoucement" nodeType="leaf" allowSort="true" allowDelete="true" allowPublish="true">
			<elements>

				<date field="date" label="date" />		
				<ipe field="annoucement" label="Announcement" tag="p" rows="4" />

				<list family="annoucementLinks" label="Links" display="inline" >
					<addableObject templateName="annoucementLink" addText="Add a Link" />
				</list>
			</elements>
		</template>

		<template name="annoucementLink" nodeType="leaf" allowSort="true" allowDelete="true" allowPublish="true">
			<elements>
				<ipe field="annoucementLinkLabel" label="Link Label" tag="p" rows="1" />
				<ipe field="annoucementLinkUrl" label="Link URL" tag="p" rows="1" />
			</elements>
		</template>
		
<!-- WHERE TO FIND -->

		<template name="wheretofind" nodeType="category" allowSort="true" allowDelete="false" allowPublish="false">
			<elements>
				<ipe field="intro" label="Intro Paragraph" tag="p" rows="6" />
			</elements>
			<addableObject templateName="city" addText="Add a City" />
		</template>

		<template name="city" nodeType="category" allowSort="true" allowDelete="true" allowPublish="false">
			<elements>
				<list family="locations" label="Links" display="inline" >
					<addableObject templateName="location" addText="Add an Location" />
				</list>
			</elements>
		</template>
		
		<template name="location" nodeType="leaf" allowSort="true" allowDelete="true" allowPublish="true">>
			<elements>
				<ipe field="url" label="URL (optional)" tag="p" rows="1" />
			</elements>
		</template>

		<template name="contact" nodeType="leaf" allowDelete="false" allowPublish="false">>
			<elements>
				<ipe field="intro" label="Intro Paragraph" tag="p" rows="4" />
				<ipe field="address" label="Address" tag="p" rows="3" />
				<ipe field="contactEmail" label="Email address" tag="p" rows="3" />
			</elements>
		</template>

<!-- BOOKS -->

		<template name="books" nodeType="category" allowSort="true" allowDelete="false" allowPublish="false">
			<addableObject templateName="book" addText="Add a Book" />
		</template>

		<template name="book" nodeType="leaf">
			<elements>
				<list family="gallery" label="Images" display="inline" >
					<addableObject templateName="bookImage" addText="Add an Image" />
				</list>
				<ipe field="description" label="Book Description" tag="p" rows="10" />
				<list family="sidebarList" label="Sidebar Lists" display="component" >
					<addableObject templateName="bookList" addText="Add a List" />
				</list>
			</elements>
		</template>

		<template name="bookImage" nodeType="leaf" allowSort="true" allowDelete="true">
			<elements>
				<singleImage field="bookimage" label="Image">
					<resize name="thumb" width="255" height="145" forceDimensions="width" crop="true" />
					<resize name="full" width="800" height="295" forceDimensions="width" crop="true" />
					<ext>jpg</ext>
				</singleImage>
				<ipe field="description" label="Image Description" tag="p" rows="1" />
			</elements>
		</template>

		<template name="sidebarList" nodeType="leaf" allowSort="true" allowDelete="true" allowPublish="true">
			<elements>
				<ipe field="blurb" label="Blurb" tag="p" rows="3" />
				<list family="bookList" label="List Items" display="component" >
					<addableObject templateName="booklistItem" addText="Add an Item" />
				</list>
			</elements>
		</template>

		<template name="bookLists" nodeType="leaf" allowSort="true" allowDelete="true" allowPublish="true">
			<addableObject templateName="bookListItem" label="" addText="Add an Item" />
		</template>

		<template name="bookListItem" nodeType="leaf" allowSort="true" allowDelete="true" allowPublish="true">
			<elements>
				<ipe field="name" label="Name" tag="p" rows="3" />
				<ipe field="value" label="Value" tag="p" rows="3" />
			</elements>
		</template>
		
	</templates>

  <data>
    <!-- If you don't insert any data, theree will be nothing in the CMS -->

    <item templateName="home">
      <content>
        <title>Homepage</title>
      </content>
    </item>

    <item templateName="books">
      <content>
        <title>Books</title>
      </content>
    </item>

    <item templateName="wheretofind">
      <content>
        <title>Where to Find</title>
      </content>
    </item>

    <item templateName="contact">
      <content>
        <title>Contact</title>
      </content>
    </item>

  </data>

</configuration>

