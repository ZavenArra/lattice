<?xml version="1.0" encoding="utf-8"?>

<configuration>

	<templates>

<!-- HOME -->
		<template name="basicCategory" nodetype="CATEGORY" allow_sort="false" allow_delet="false" allow_publish="false"/>

		<template name="singleIPE" nodetype="LEAF" allow_sort="true" allow_delete="true" allow_publish="false"/>
			<elements>
				<ipe field="singleIPE" label="single IPE" rows="1"/>
			</elements>
		</template>

		<template name="singleRadioGroup" nodetype="LEAF" allow_sort="true" allow_delete="true" allow_publish="false">
			<elements>
				<radiogroup field="singleRadioGroup" grouplabel="Single Radio Group">
				<radio label="One" value="1"/>
				<radio label="Two" value="2"/>
				<radio label="Three" value="3"/>
				</radiogroup>
			</elements>
		</template>

		<template name="singleCheckbox" nodetype="LEAF" allow_sort="true" allow_delete="true" allow_publish="false">
			<elements>
				<checkbox field="Single Checkbox" label="Single Checkbox"/>
			</elements>
		</template>

		<template name="singleDate" nodetype="LEAF" allow_sort="true"allow_delete="true" allow_publish="false">
			<elements>
				<date field="singleDate" label="Single Date"/>
			</elements>
		</template>

		<template name="singleTime" nodetype="LEAF" allow_sort="true" allow_delete="true" allow_publish="false">
			<elements>
				<time field="singleTime" label="Single Time/>
			</elements>
		</template>

		<template name="simpleListModulePage" nodetype="LEAF" allow_sort=true" allow_delete="true" allow_publish="false">
			<elements>
				<ipe field="title" label="Title" rows="1"/>
				<ipe field="description" label="Description"/>
				<list family="simplelistmodule" label="Simple List Module" display="inline">
					<addableobject id="simpleListItem"  templateAddText="Add a field"/>
				</list>
			</elements>
		</template>

		<template name="imagelistmodule" nodetype"LEAF" alow_sort="true" alow_delete="true" alow_publish="false">
			<elements>
				<ipe field="title" label="Title" rows="1"/>
				<ipe field="description" label="Description"/>		
				<singleimage field="file" extentions="jpg" label=""/>
				<list family="imageListmodule" label="Image List" dislplay="inline">
					<addableobject="imageList" templateAddText="Add an image"/>
				</list>
			</elements>	
		</template>
		
		<template name="filelistmodulepage" nodetype="LEAF" allow_sort="true" alow_delete="true" allow_publish="false">
			<elements>
				<ipe field="title" label="Title" rows="1"/>
				<ipe field="description" label="Description"/>
				<file field="file" label="" extentions="txt,pdf,html,csv"/>
				<list family="fileListModule" label "File List" display="inline">
 					<addableobject="fileList" templateAddText="Add a field"/>
				</list>
			</elements>
		</temlpate>
	
		<template name="coplexlistmodulepage" type="LEAF" allow_sort="true" allow_delete="true" allow_publish="false">
			<elements>
			
			</elements>
		</template>
		<template name="basiccategory" nodetype="CATEGORY" allow_sort="false" allow_delete="false" allow_publish="false">
			<elements>
				<ipe field="featureBlurb" label="Feature Text" tag="p" rows="4" />
				<singleimage field="featureImage" extensions="jpg" label="Feature Image"/>
				<list family="featureList" label="Feature Links" display="inline" >
					<addableobject id="featureListItem" templateAddText="Add a Link" />
				</list>
				<ipe field="aboutHeader" label="About Header" tag="p" rows="1" />		
				<ipe field="aboutBlurb" label="About Soberscove" tag="p" rows="6" />		

				<!-- a bit confused, if i want to add annoucements as a component, is this how i do it? Or do i make annoucements a category and make it an addableobject within <!-- template name="home"?? -->
				<list family="annoucements" label="Annoucement List" display="component" >
					<addableobject id="featureListItem" templateAddText="Add a Link" />
				</list>
			</elements>
		</template>
		

		<!-- allow_delete here is regarding the CHILD objects yes? -->
		<template name="announcements" nodetype="CATEGORY" allow_sort="true" allow_delete="true" allow_publish="false">
			<addableobject id="annoucement" templateAddText="Add an annoucement" />
		</template>
		
		<template name="annoucement" nodetype="LEAF" allow_sort="true" allow_delete="true" allow_publish="true">
			<elements>
				<!-- how are fields namespaced? can this just be "date" or is it ideally "announcementDate" -->
				<date field="date" label="date" />		
				<ipe field="annoucement" label="Announcement" tag="p" rows="4" />
				<!-- display = inline/component? -->	
				<list family="annoucementLinks" label="Links" display="inline" >
					<addableobject id="annoucementLink" templateAddText="Add a Link" />
				</list>
			</elements>
		</template>

		<template name="annoucementLink" nodetype="LEAF" allow_sort="true" allow_delete="true" allow_publish="true">
			<elements>
				<ipe field="annoucementLinkLabel" label="Link Label" tag="p" rows="1" />
				<ipe field="annoucementLinkUrl" label="Link URL" tag="p" rows="1" />
			</elements>
		</template>
		
<!-- WHERE TO FIND -->

		<template name="wheretofind" nodetype="CATEGORY" allow_sort="true" allow_delete="false" allow_publish="false">
			<elements>
				<ipe field="intro" label="Intro Paragraph" tag="p" rows="6" />
			</elements>
			<addableobject id="city" templateAddText="Add a City" />
		</template>
		
		<!-- default sort / alphabetical? or just allowsort? -->
		<template name="city" nodetype="CATEGORY" allow_sort="true" allow_delete="true" allow_publish="false">
			<elements>
				<list family="locations" label="Links" display="inline" >
					<addableobject id="location" templateAddText="Add an Location" />
				</list>
			</elements>
		</template>
		
		<template name="location" nodetype="LEAF">
			<elements>
				<ipe field="url" label="URL (optional)" tag="p" rows="1" />
			</elements>
		</template>

		<template name="contact" nodetype="LEAF">
			<elements>
				<ipe field="intro" label="Intro Paragraph" tag="p" rows="4" />
				<mopcontactform/>
				<ipe field="address" label="Address" tag="p" rows="3" />
				<ipe field="contactemail" label="Email address" tag="p" rows="3" />
			</elements>
		</template>

<!-- BOOKS -->

		<template name="books" nodetype="CATEGORY">
			<addableobject id="book" templateAddText="Add a Book" />
		</template>

		<template name="book" nodetype="LEAF">
			<elements>
				<list family="gallery" label="Images" display="inline" >
					<addableobject id="bookImage" templateAddText="Add an Image" />
				</list>
				<ipe field="description" label="Book Description" tag="p" rows="10" />
			</elements>
			<addableobject id="sidebarlist" templateAddText="Add a Sidebar List" />
		</template>

		<template name="bookImage" nodetype="LEAF">
			<elements>
				<!-- how to deal with image sizes -->
				<singleimage field="bookimage" extensions="jpg" label="Image"/>
				<!-- alt-tag -->
				<ipe field="description" label="Book Description" tag="p" rows="1" />
			</elements>
		</template>

		<template name="sidebarlist" nodetype="LEAF">
			<elements>
				<ipe field="blurb" label="Blurb" tag="p" rows="3" />
				<list family="booklist" label="List Items" display="inline" >
					<addableobject id="booklistitem" templateAddText="Add an Item" />
				</list>
			</elements>
		</template>
		
		<template name="booklist" nodetype="LEAF">
			<elements>
				
				<ipe field="blurb" label="Blurb" tag="p" rows="3" />
				
			</elements>
		</template>
		
	</templates>

	<data></data>

</configuration>

